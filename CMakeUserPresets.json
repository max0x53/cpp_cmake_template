{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21
    },
    "configurePresets": [
        {
            "name": "android",
            "hidden": true,
            "inherits": [
                "default"
            ],
            "cacheVariables": {
                "CMAKE_ANDROID_NDK": "<FULL_PATH_TO_NDK>",
                "CMAKE_SYSTEM_NAME": "Android",
                "CMAKE_ANDROID_API": "31",
                "CMAKE_ANDROID_ARCH_ABI": "arm64-v8a",
                "CMAKE_ANDROID_STL_TYPE": "c++_static"
            }
        },
        {
            "name": "android-debug",
            "inherits": [
                "android",
                "linux-debug"
            ]
        },
        {
            "name": "android-release",
            "inherits": [
                "android",
                "linux-release"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "android-debug",
            "displayName": "android-debug",
            "configurePreset": "android-debug",
            "description": "Debug build for android"
        },
        {
            "name": "android-release",
            "displayName": "android-release",
            "configurePreset": "android-release",
            "description": "Release build for android"
        }
    ]
}